@model Cube_4.models.Article

@{
    ViewData["Title"] = "Edit";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Cube_4.models.User> SignInManager
@inject UserManager<Cube_4.models.User> UserManager
@if (!SignInManager.IsSignedIn(User) || !User.IsInRole("Admin")){
    <p>Accès refusé</p>
}else{
<h1>Edit</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditArticle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Libelle" class="control-label"></label>
                <input asp-for="Libelle" class="form-control" />
                <span asp-validation-for="Libelle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prix" class="control-label"></label>
                <input asp-for="Prix" class="form-control" />
                <span asp-validation-for="Prix" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Famille" class="control-label"></label>
                <select asp-for="Famille.Id" class="form-control" asp-items="@ViewBag.Famille"></select>
                <span asp-validation-for="Famille.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fournisseur" class="control-label"></label>
                <select asp-for="Fournisseur.Id" class="form-control" asp-items="@ViewBag.Fournisseur"></select>
                <span asp-validation-for="Fournisseur.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
